@using TuLote.Entidades
@model TuLote.Entidades.DTOs.LoteCreacionDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-warning">Editar Lote</h1>

<hr />
<div class="row text-white fw-bolder fs-6">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="fw-bold mb-1" />
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" disabled class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
                <input type="hidden" asp-for="Numero" />

            </div>
            <div class="form-group">
                <label asp-for="Metros" class="control-label"></label>
                <input asp-for="Metros" class="form-control" />
                <span asp-validation-for="Metros" class="text-danger"></span>
            </div>
            @*<div>
                <label asp-for="Etapas" class="mb-2" style="font-weight:bold;"></label>
                @Html.DropDownList("Etapas", Html.GetEnumSelectList<Etapas>(), "Seleccionar Área/Etapa", new { @class = "form-control" })
                <span asp-validation-for="Orientacion" class="text-danger"></span>
                </div>*@
            <div>
                <label asp-for="Orientacion" class="mb-2" style="font-weight:bold;"></label>
                @Html.DropDownList("Orientacion", Html.GetEnumSelectList<Orientaciones>(), "Seleccionar orientación", new { @class = "form-control" })
                <span asp-validation-for="Orientacion" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Tipo" class="mb-2" style="font-weight:bold;"></label>
                @Html.DropDownList("Tipo", Html.GetEnumSelectList<Tipo>(), "Seleccionar ubicación", new { @class = "form-control" })
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label mt-2">
                    <input class="form-check-input mt-1 bg-success" asp-for="Disponible" /> @Html.DisplayNameFor(model => model.Disponible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label type="hidden" asp-for="Barrio_Id" class="control-label">Barrio</label>
                <select type="hidden" asp-for="Barrio_Id" class="form-control" asp-items="ViewBag.Barrio_Id"></select>
            </div>
            <div class="form-group mt-2">
                <label type="hidden" asp-for="FechaCreacion" class="control-lab=el"></label>
                <input type="date" asp-for="FechaCreacion" disabled class="control-label" datetime="20:00" />
                <input type="hidden" asp-for="FechaCreacion" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Usuario.Alias" type="hidden" class="control-label"></label>
                <input asp-for="Usuario.Alias" disabled class="form-control" />
                <input type="hidden" asp-for="Usuario_Id" />
            </div>
            <div class="btn-group col-12 mb-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-success col-6 rounded"><i class="fa-solid fa-floppy-disk"></i>&nbsp&nbspGuardar</button>
                <a class="text-white btn btn-warning col-6 ms-1 rounded" asp-action="Index"><i class="fa-solid fa-hand-point-left"></i>&nbsp&nbspRegresar</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

