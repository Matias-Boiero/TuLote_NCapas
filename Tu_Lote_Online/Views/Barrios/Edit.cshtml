@model TuLote.Entidades.Barrio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-warning">Editar</h1>

<h4 class="text-warning">Barrio</h4>
<hr />
<div class="row text-white fw-bolder fs-5">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localidad_Id" class="control-label">Localidad</label>
                <select asp-for="Localidad_Id" class="form-control" asp-items="ViewBag.Localidad_Id"></select>
                <span asp-validation-for="Localidad_Id" class="text-danger"></span>
            </div>
            <div class="btn-group col-12 mt-2">
                <input type="submit" value="Guardar" class="btn btn-success mt-1 col-6" />
                <button class="text-white btn btn-warning mt-1 col-6" asp-action="Index">Regresar</button>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
